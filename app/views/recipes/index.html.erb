<div class= "container">
    <h1>Recipes</h1>

    <%= link_to 'New Recipe', new_recipe_path, class: "btn btn-primary" %>

    <ul>
        <% @recipes.each do |recipe| %>
            <li><%= link_to recipe.title, recipe_path(recipe) %> - <%= link_to "Delete", recipe_path(recipe), data: { turbo_method: :delete, turbo_confirm: "Delete recipe?" }, class: "btn btn-danger btn-sm" %></li>
        <% end %>
    </ul>
    <p>Total Recipes: <%= @recipes.count %></p>
</div>